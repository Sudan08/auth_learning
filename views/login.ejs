<%- include("./partials/header.ejs") -%>
<div class="box-3 d-flex justify-content-center align-items-center">
    <div class="box-1 d-flex justify-content-center align-items-center">
        <div class="row d-flex flex-row justify-content-center">
            <div class="col-sm-8 d-flex flex-row justify-content-center">
                <h1>Login</h1>
            </div>
            <form action="/login" class="d-flex justify-content-center flex-column" method="post">
                <div class="col-sm-12 d-flex flex-column justify-content-center m-3 w-100 ">
                <label for="username" class="my-4">UserName:</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <label for="password" class="my-4">Password:</label>
                <div class="d-flex flex-row">
                <input type="password" name="password" id="password" class="form-control password" required>
                <button type='button' class="btn btn-light" onclick="viewPassword()"><img src="https://cdn-icons-png.flaticon.com/512/709/709612.png" alt="eye" class="eye"></button>
                </div>
                <button type='submit' class="btn btn-outline-light w-50 my-3">
                    Login
                </button>
                </div>
            </form>
      
        </div>
    </div>
</div>
<%- include("./partials/footer.ejs") -%>
